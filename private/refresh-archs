set -e

if [ -z "$1" ]; then
    printf "Usage: %s path/to/lintian/data\n" \
        "$(basename "$0")"
    exit 0
fi

f="$(mktemp)"

cat > "$f" <<EOF
# List of known architectures as provided by dpkg-architecture
# Last updated: $(date -u +'%Y-%m-%d')

EOF

export LANG=C
{ echo "any"; echo "all";
  dpkg-architecture -L; } | sort >> "$f"

mv "$f" "$1"/fields/architectures
